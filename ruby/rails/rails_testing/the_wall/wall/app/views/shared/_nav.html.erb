<header class="navbar navbar-fixed-top navbar-inverse">
  <div class="container">
    <nav>
      <ul class="nav navbar-nav navbar-right">
        <% if session[:user] %>
          <li>Hello, <%= session[:user]['username'] %></li>
          <li><%= link_to "Log out", user_path(session[:user]["id"]), method: :delete %></li>
        <% else %>
          <li><%= link_to "Log in", users_login_path %></li> 
        <% end %>
      </ul>
    </nav>
  </div>
</header>
